<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.bdqn.tangcco.student.dao.StudentMapper">
    <resultMap id="studentMap" type="cn.bdqn.tangcco.entity.Student">
        <id column="student_id" property="studentId"/>
        <result column="student_num" property="studentNum"/>
        <result column="user_id" property="userId"/>
    </resultMap>
    <select id="queryCountStudent" resultMap="studentMap">
      SELECT count(*) FROM student
    </select>
    <select id="queryStudentById" resultMap="studentMap" parameterType="Integer">
        SELECT student_id,student_num,user_id FROM student WHERE student_id=#{id}
    </select>
    <insert id="addStudent" parameterType="cn.bdqn.tangcco.entity.Student">
        INSERT INTO student (student_id,student_num,user_id) VALUES (#{studentId},#{studentNum},#{userId})
    </insert>
    <update id="updateStudent" parameterType="cn.bdqn.tangcco.entity.Student">
        UPDATE student SET student_id=#{studentId},student_num=#{studentNum},user_id=#{userId} where student_id=#{studentId}
    </update>
    <delete id="deleteStudentById" parameterType="cn.bdqn.tangcco.entity.Student">
        DELETE FROM student WHERE student_id=#{id}
    </delete>
</mapper>